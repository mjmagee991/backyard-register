<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="backyardRegister.StartMenuActivity"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Backyard\nRegister"
        android:textSize="30sp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:src="@drawable/cash_register" />

    <Button
        android:id="@+id/b_sell"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sell"
        android:textSize="@dimen/standard_text_size"
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButton"/>

    <Button
        android:id="@+id/b_create_edit_lists"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create / Edit\nLists"
        android:textSize="@dimen/standard_text_size"
        android:layout_marginVertical="10dp"
        android:paddingVertical="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButton"/>

    <Button
        android:id="@+id/b_transaction_history"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@color/colorButton"
        android:paddingVertical="20dp"
        android:text="Transaction\nHistory"
        android:textColor="@color/colorButtonText"
        android:textSize="@dimen/standard_text_size" />

</LinearLayout>